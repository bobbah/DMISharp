<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net6.0;netstandard2.0;net461;net472</TargetFrameworks>
    <Authors>Bobbahbrown</Authors>
    <Company>MelonMesa</Company>
    <Description>Library for handling BYOND DMI files.</Description>
    <Copyright>Copyright (c) 2022 MelonMesa</Copyright>
    <PackageProjectUrl>https://melonmesa.com</PackageProjectUrl>
    <RepositoryUrl>https://github.com/bobbahbrown/DMISharp</RepositoryUrl>
    <RepositoryType>Git</RepositoryType>
    <AssemblyVersion>1.7.0.0</AssemblyVersion>
    <Version>1.7.0</Version>
    <PackageIcon>dmisharp.png</PackageIcon>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageLicenseExpression>GPL-3.0-only</PackageLicenseExpression>
    <PackageTags>DMI BYOND SpaceStation13</PackageTags>
    <PackageReleaseNotes>
      - Added compression optimizations and some other size-decreasing optimizations to DMI file saving
      - Updated to .NET 6
      - Updated ImageSharp to 2.0
    </PackageReleaseNotes>
    <FileVersion>1.7.0.0</FileVersion>
    <LangVersion>8.0</LangVersion>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="IndexRange" Version="1.0.1" />
    <PackageReference Include="MetadataExtractor" Version="2.7.1" />
    <PackageReference Include="Microsoft.NETFramework.ReferenceAssemblies" Version="1.0.2">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
    <PackageReference Include="Microsoft.Toolkit.HighPerformance" Version="7.1.2" />
    <PackageReference Include="SixLabors.ImageSharp" Version="2.0.0" />
  </ItemGroup>

  <ItemGroup>
    <None Include="NugetIcon\dmisharp.png" Pack="true" PackagePath="" />
  </ItemGroup>

</Project>
